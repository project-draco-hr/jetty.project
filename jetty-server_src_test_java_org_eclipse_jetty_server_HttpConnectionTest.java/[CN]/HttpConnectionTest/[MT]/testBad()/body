{
  String response=connector.getResponses("GET & HTTP/1.1\n" + "Host: localhost\n" + "\015\012");
  checkContains(response,0,"HTTP/1.1 400");
  connector.reopen();
  response=connector.getResponses("GET http://localhost:WRONG/ HTTP/1.1\n" + "Host: localhost\n" + "\015\012");
  checkContains(response,0,"HTTP/1.1 400");
  connector.reopen();
  response=connector.getResponses("GET /foo/bar%1 HTTP/1.1\n" + "Host: localhost\n" + "\015\012");
  checkContains(response,0,"HTTP/1.1 400");
  connector.reopen();
  response=connector.getResponses("GET /foo/bar%c0%00 HTTP/1.1\n" + "Host: localhost\n" + "\015\012");
  checkContains(response,0,"HTTP/1.1 400");
  connector.reopen();
  response=connector.getResponses("GET /foo/bar%c1 HTTP/1.1\n" + "Host: localhost\n" + "\015\012");
  checkContains(response,0,"HTTP/1.1 400");
}
