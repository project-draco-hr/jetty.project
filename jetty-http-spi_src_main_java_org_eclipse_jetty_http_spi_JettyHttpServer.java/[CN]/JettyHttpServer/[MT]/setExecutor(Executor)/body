{
  if (executor == null)   throw new IllegalArgumentException("missing required 'executor' argument");
  if (!(executor instanceof ThreadPoolExecutor))   throw new IllegalArgumentException("only java.util.concurrent.ThreadPoolExecutor instances are allowed, got: " + executor.getClass().getName());
  if (LOG.isDebugEnabled())   LOG.debug("using ThreadPoolExecutor for server thread pool");
  this._executor=(ThreadPoolExecutor)executor;
  _server.setThreadPool(new ThreadPoolExecutorAdapter(_executor));
}
