{
  try {
synchronized (lock) {
      isOpen();
      out.write(lineSeparator);
      if (autoFlush)       out.flush();
    }
  }
 catch (  InterruptedIOException x) {
    Thread.currentThread().interrupt();
  }
catch (  IOException ex) {
    Log.debug(ex);
    setError();
    throw new RuntimeIOException(ex);
  }
}
