{
  boolean call_on_read_possible=false;
synchronized (_inputQ) {
    boolean wasEmpty=_inputQ.isEmpty();
    _inputQ.add(item);
    if (LOG.isDebugEnabled())     LOG.debug("{} queued {}",this,item);
    if (wasEmpty) {
      if (_listener == null)       _inputQ.notify();
 else       call_on_read_possible=_unready;
    }
  }
  if (call_on_read_possible)   onReadPossible();
}
