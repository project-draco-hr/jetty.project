{
  int available=0;
  boolean woken=false;
synchronized (_inputQ) {
    Content content=_inputQ.peekUnsafe();
    if (content == null) {
      try {
        produceContent();
      }
 catch (      IOException e) {
        woken=failed(e);
      }
      content=_inputQ.peekUnsafe();
    }
    if (content != null)     available=remaining(content);
  }
  if (woken)   wake();
  return available;
}
