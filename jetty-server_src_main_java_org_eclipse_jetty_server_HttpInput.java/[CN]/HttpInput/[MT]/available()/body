{
synchronized (_inputQ) {
    Content content=_inputQ.peekUnsafe();
    if (content == null) {
      try {
        produceContent();
      }
 catch (      IOException e) {
        failed(e);
      }
      content=_inputQ.peekUnsafe();
    }
    if (content != null)     return remaining(content);
    return 0;
  }
}
