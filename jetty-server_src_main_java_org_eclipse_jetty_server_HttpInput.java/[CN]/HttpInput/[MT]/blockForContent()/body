{
  if (!Thread.holdsLock(_inputQ))   throw new IllegalStateException();
  while (_inputQ.isEmpty() && !isFinished()) {
    try {
      if (LOG.isDebugEnabled())       LOG.debug("{} waiting for content",this);
      _inputQ.wait();
    }
 catch (    InterruptedException e) {
      throw (IOException)new InterruptedIOException().initCause(e);
    }
  }
}
