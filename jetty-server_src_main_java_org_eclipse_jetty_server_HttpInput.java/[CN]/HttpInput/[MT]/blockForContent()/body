{
  try {
    long timeout=0;
    if (_blockingTimeoutAt >= 0) {
      timeout=_blockingTimeoutAt - System.currentTimeMillis();
      if (timeout <= 0)       throw new TimeoutException();
    }
    if (LOG.isDebugEnabled())     LOG.debug("{} blocking for content timeout={}",this,timeout);
    if (timeout > 0)     _inputQ.wait(timeout);
 else     _inputQ.wait();
    if (_blockingTimeoutAt > 0 && System.currentTimeMillis() >= _blockingTimeoutAt)     throw new TimeoutException();
  }
 catch (  Throwable e) {
    throw (IOException)new InterruptedIOException().initCause(e);
  }
}
