{
  boolean finished;
synchronized (lock()) {
    if (_contentState.isEOF())     return true;
    if (_listener == null)     return true;
    if (available() > 0)     return true;
    if (_notReady)     return false;
    _notReady=true;
    finished=isFinished();
  }
  if (finished)   _channelState.onReadPossible();
 else   unready();
  return false;
}
