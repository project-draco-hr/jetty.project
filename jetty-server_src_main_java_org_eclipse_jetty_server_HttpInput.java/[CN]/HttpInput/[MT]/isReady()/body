{
  boolean finished;
synchronized (_inputQ) {
    if (_state.isEOF())     return true;
    if (_listener == null)     return true;
    if (available() > 0)     return true;
    if (_notReady)     return false;
    _notReady=true;
    finished=isFinished();
  }
  if (finished)   onReadPossible();
 else   unready();
  return false;
}
