{
synchronized (_inputQ) {
    while (true) {
      Content item=nextContent();
      if (item != null) {
        if (LOG.isDebugEnabled())         LOG.debug("{} read {} from {}",this,len,item);
        int l=get(item,b,off,len);
        consumeNonContent();
        return l;
      }
      if (!_state.blockForContent(this))       return _state.noContent();
    }
  }
}
