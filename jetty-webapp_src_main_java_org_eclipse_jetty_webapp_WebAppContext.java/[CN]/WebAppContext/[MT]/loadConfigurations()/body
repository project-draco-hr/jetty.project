{
  if (_configurations != null)   return;
  Server server=getServer();
  if (server != null) {
    Object serverConfigs=server.getAttribute(SERVER_CONFIG);
    if (serverConfigs != null && serverConfigs instanceof String[])     _configurationClasses=(String[])serverConfigs;
  }
  if (_configurationClasses == null)   _configurationClasses=__dftConfigurationClasses;
  _configurations=new Configuration[_configurationClasses.length];
  for (int i=0; i < _configurationClasses.length; i++) {
    _configurations[i]=(Configuration)Loader.loadClass(this.getClass(),_configurationClasses[i]).newInstance();
  }
}
