{
  if (_serverClasses != null)   return;
  Server server=getServer();
  if (server != null) {
    Object serverClasses=server.getAttribute(SERVER_SRV_CLASSES);
    if (serverClasses != null || serverClasses instanceof String[])     _serverClasses=new ClasspathPattern((String[])serverClasses);
  }
  if (_serverClasses == null)   _serverClasses=new ClasspathPattern(__dftServerClasses);
}
