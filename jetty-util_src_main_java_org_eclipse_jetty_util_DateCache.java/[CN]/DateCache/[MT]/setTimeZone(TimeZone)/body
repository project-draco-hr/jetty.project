{
  setTzFormatString(tz);
  if (_locale != null) {
    _tzFormat=new SimpleDateFormat(_tzFormatString,_locale);
  }
 else   if (_dfs != null) {
    _tzFormat=new SimpleDateFormat(_tzFormatString,_dfs);
  }
 else {
    _tzFormat=new SimpleDateFormat(_tzFormatString);
  }
  _tzFormat.setTimeZone(tz);
  _tick=null;
}
