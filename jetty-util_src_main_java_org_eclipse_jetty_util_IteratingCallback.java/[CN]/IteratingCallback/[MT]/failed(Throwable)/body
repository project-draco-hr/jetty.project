{
  loop:   while (true) {
    State state=_state.get();
switch (state) {
case SUCCEEDED:
case FAILED:
case IDLE:
case CLOSED:
case CALLED:
{
        break loop;
      }
case LOCKED:
{
      Thread.yield();
      continue loop;
    }
case PENDING:
case PROCESSING:
{
    if (!_state.compareAndSet(state,State.FAILED))     continue loop;
    onCompleteFailure(x);
    break loop;
  }
default :
throw new IllegalStateException("state=" + state);
}
}
}
