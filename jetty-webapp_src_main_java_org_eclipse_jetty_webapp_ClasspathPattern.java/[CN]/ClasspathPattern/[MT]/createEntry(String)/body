{
  Entry entry=null;
  if (pattern != null) {
    String item=pattern.trim();
    if (item.length() > 0) {
      entry=new Entry();
      entry.result=!item.startsWith("-");
      entry.partial=item.endsWith(".");
      entry.classpath=entry.result ? item : item.substring(1).trim();
    }
  }
  return entry;
}
