{
  if (LOG.isDebugEnabled())   LOG.debug("{} disconnect({})",policy.getBehavior(),onlyOutput ? "outputOnly" : "both");
  flusher.close();
  EndPoint endPoint=getEndPoint();
  if (LOG.isDebugEnabled())   LOG.debug("Shutting down output {}",endPoint);
  endPoint.shutdownOutput();
  if (!onlyOutput) {
    LOG.debug("Closing {}",endPoint);
    endPoint.close();
  }
}
