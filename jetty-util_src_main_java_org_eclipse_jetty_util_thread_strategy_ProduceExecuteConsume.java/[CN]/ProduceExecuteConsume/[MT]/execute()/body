{
  while (true) {
    Runnable task=_producer.produce();
    if (LOG.isDebugEnabled())     LOG.debug("{} PER produced {}",_producer,task);
    if (task == null)     break;
    try {
      _executor.execute(task);
    }
 catch (    RejectedExecutionException e) {
      if (task instanceof Rejectable) {
        try {
          ((Rejectable)task).reject();
        }
 catch (        Throwable x) {
          e.addSuppressed(x);
          LOG.warn(e);
        }
      }
    }
  }
}
