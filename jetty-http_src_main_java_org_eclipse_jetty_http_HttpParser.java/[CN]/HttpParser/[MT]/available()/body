{
  if (_contentView != null && _contentView.length() > 0)   return _contentView.length();
  if (_endp.isBlocking()) {
    if (_state > 0 && _endp instanceof StreamEndPoint)     return ((StreamEndPoint)_endp).getInputStream().available() > 0 ? 1 : 0;
    return 0;
  }
  parseNext();
  return _contentView == null ? 0 : _contentView.length();
}
