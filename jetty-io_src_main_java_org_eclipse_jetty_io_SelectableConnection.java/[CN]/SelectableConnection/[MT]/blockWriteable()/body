{
  _lock.lock();
  boolean writeable=false;
  try {
    if (_writeBlocked != null)     throw new IllegalStateException("already blocked by " + _writeBlocked);
    _writeBlocked=Thread.currentThread();
    _endp.setWriteInterested(true);
    writeable=_writeable.await(getMaxIdleTime(),TimeUnit.SECONDS);
  }
 catch (  InterruptedException e) {
    LOG.ignore(e);
  }
 finally {
    if (!writeable)     _endp.setWriteInterested(false);
    _writeBlocked=null;
    _lock.unlock();
  }
  return writeable;
}
