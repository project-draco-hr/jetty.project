{
  _lock.lock();
  boolean readable=false;
  try {
    if (_readBlocked != null) {
      System.err.println("Already blocked by " + _readBlocked);
      for (      StackTraceElement e : _readBlocked.getStackTrace())       System.err.println("    at " + e);
      throw new IllegalStateException();
    }
    _readBlocked=Thread.currentThread();
    _endp.setReadInterested(true);
    readable=_readable.await(getMaxIdleTime(),TimeUnit.SECONDS);
  }
 catch (  InterruptedException e) {
    LOG.ignore(e);
  }
 finally {
    if (!readable)     _endp.setReadInterested(false);
    _readBlocked=null;
    _lock.unlock();
  }
  return readable;
}
