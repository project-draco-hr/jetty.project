{
  AsyncListener wrapped=new AsyncListener(){
    @Override public void onComplete(    final AsyncEvent event) throws IOException {
      listener.onComplete(Servlet3Continuation.this);
    }
    @Override public void onError(    AsyncEvent event) throws IOException {
      listener.onComplete(Servlet3Continuation.this);
    }
    @Override public void onStartAsync(    AsyncEvent event) throws IOException {
      event.getAsyncContext().addListener(this);
    }
    @Override public void onTimeout(    AsyncEvent event) throws IOException {
      _expired=true;
      listener.onTimeout(Servlet3Continuation.this);
    }
  }
;
  if (_context != null)   _context.addListener(wrapped);
 else   _listeners.add(wrapped);
}
