{
  try {
    ByteChannel channel=null;
synchronized (this) {
      if (_channel != null) {
        channel=_channel;
        _channel=null;
        _exception=ex;
      }
    }
    if (channel != null) {
      if (ex instanceof ProtocolException)       closeChannel(channel,WebSocketConnectionRFC6455.CLOSE_PROTOCOL,ex.getMessage());
 else       closeChannel(channel,WebSocketConnectionRFC6455.CLOSE_NO_CLOSE,ex.getMessage());
    }
  }
  finally {
    _done.countDown();
  }
}
