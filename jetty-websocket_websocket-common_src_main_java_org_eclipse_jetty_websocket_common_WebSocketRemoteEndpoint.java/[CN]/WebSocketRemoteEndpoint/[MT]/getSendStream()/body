{
  if (isWriterActive()) {
    throw new IOException("Cannot get OutputStream while Writer is open");
  }
  if (isStreamActive()) {
    LOG.debug("getSendStream() -> (existing) {}",stream);
    return stream;
  }
  stream=new MessageOutputStream(connection,outgoing);
  LOG.debug("getSendStream() -> (new) {}",stream);
  return stream;
}
