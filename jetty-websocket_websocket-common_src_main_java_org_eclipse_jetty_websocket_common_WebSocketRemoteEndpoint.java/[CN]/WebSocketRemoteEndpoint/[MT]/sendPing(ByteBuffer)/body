{
  if (msgLock.tryLock()) {
    try {
      msgType.set(CONTROL);
      if (LOG.isDebugEnabled()) {
        LOG.debug("sendPing with {}",BufferUtil.toDetailString(applicationData));
      }
      blockingWrite(new PingFrame(applicationData));
    }
  finally {
      msgType.set(NONE);
      msgLock.unlock();
    }
  }
 else {
    throw new IllegalStateException(PRIORMSG_ERROR);
  }
}
