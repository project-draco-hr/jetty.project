{
  if (isStreamActive()) {
    throw new IOException("Cannot get Writer while OutputStream is open");
  }
  if (isWriterActive()) {
    LOG.debug("getSendWriter() -> (existing) {}",writer);
    return writer;
  }
  writer=new MessageWriter(connection,outgoing);
  LOG.debug("getSendWriter() -> (new) {}",writer);
  return writer;
}
