{
  if (msgLock.tryLock()) {
    try {
      msgType.set(TEXT);
      WebSocketFrame frame=new TextFrame(text);
      if (LOG.isDebugEnabled()) {
        LOG.debug("sendString with {}",BufferUtil.toDetailString(frame.getPayload()));
      }
      blockingWrite(frame);
    }
  finally {
      msgType.set(NONE);
      msgLock.unlock();
    }
  }
 else {
    throw new IllegalStateException(PRIORMSG_ERROR);
  }
}
