{
  if (LOG.isDebugEnabled()) {
    if (message == null) {
      LOG.debug("onText() msg=null");
    }
 else {
      LOG.debug("onText() size={}, msg={}",message.length(),abbreviate(message));
    }
  }
  try {
    this.conn.write(message);
  }
 catch (  IOException e) {
    e.printStackTrace(System.err);
  }
}
