{
  try {
    response.setStatus(statusCode);
    if (statusCode != HttpServletResponse.SC_OK)     response.setHeader(HttpHeader.CONNECTION.asString(),HttpHeaderValue.CLOSE.asString());
    response.getOutputStream().close();
    if (LOG.isDebugEnabled())     LOG.debug("CONNECT response sent {} {}",request.getProtocol(),response.getStatus());
  }
 catch (  IOException x) {
  }
}
