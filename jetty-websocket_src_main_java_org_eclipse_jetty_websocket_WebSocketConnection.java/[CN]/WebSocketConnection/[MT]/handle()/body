{
  boolean more=true;
  try {
    while (more) {
      int flushed=_generator.flush();
      int filled=_parser.parseNext();
      more=flushed > 0 || filled > 0 || !_parser.isBufferEmpty() || !_generator.isBufferEmpty();
      if (filled < 0 || flushed < 0) {
        _endp.close();
        break;
      }
    }
  }
 catch (  IOException e) {
    e.printStackTrace();
    throw e;
  }
 finally {
    if (_endp.isOpen())     _idle.access(_endp);
 else     _websocket.onDisconnect();
  }
}
