{
  System.err.printf(promptFormat,args);
  if (yes) {
    System.err.printf("--yes%n");
    return true;
  }
  try {
    String response=input.readLine();
    return (Utils.isNotBlank(response) && response.toLowerCase().startsWith("y"));
  }
 catch (  IOException e) {
    e.printStackTrace();
    return false;
  }
}
