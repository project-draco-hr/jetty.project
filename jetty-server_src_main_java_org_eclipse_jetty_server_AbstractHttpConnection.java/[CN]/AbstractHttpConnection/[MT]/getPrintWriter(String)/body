{
  getOutputStream();
  if (_writer == null) {
    _writer=new OutputWriter();
    if (_server.isUncheckedPrintWriter())     _printWriter=new UncheckedPrintWriter(_writer);
 else     _printWriter=new ClearablePrintWriter(_writer){
      public void close(){
synchronized (lock) {
          try {
            out.close();
          }
 catch (          IOException e) {
            setError();
          }
        }
      }
    }
;
  }
  _writer.setCharacterEncoding(encoding);
  return _printWriter;
}
