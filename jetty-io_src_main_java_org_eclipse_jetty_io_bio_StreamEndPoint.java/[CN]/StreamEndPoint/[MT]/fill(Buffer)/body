{
  if (_ishut)   return -1;
  if (_in == null)   return 0;
  int space=buffer.space();
  if (space <= 0) {
    if (buffer.hasContent())     return 0;
    throw new IOException("FULL");
  }
  try {
    int filled=buffer.readFrom(_in,space);
    if (filled < 0)     shutdownInput();
    return filled;
  }
 catch (  SocketTimeoutException e) {
    idleExpired();
    return -1;
  }
}
