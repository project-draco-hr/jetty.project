{
  if (path == null) {
    return path;
  }
  String value=homeDir.getAbsolutePath();
  if (path.startsWith(value)) {
    return "${jetty.home}" + path.substring(value.length());
  }
  if (baseDir != null) {
    value=baseDir.getAbsolutePath();
    if (path.startsWith(value)) {
      return "${jetty.base}" + path.substring(value.length());
    }
  }
  return path;
}
