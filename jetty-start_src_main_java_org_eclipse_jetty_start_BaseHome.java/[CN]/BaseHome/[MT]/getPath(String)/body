{
  if (isBaseDifferent()) {
    Path file=baseDir.resolve(path);
    if (FS.exists(file)) {
      return file;
    }
  }
  for (  SearchDir search : searchDirs) {
    Path file=search.resolve(path);
    if (FS.exists(file)) {
      return file;
    }
  }
  Path file=homeDir.resolve(path);
  if (FS.exists(file)) {
    return file;
  }
  return FS.toPath(path);
}
