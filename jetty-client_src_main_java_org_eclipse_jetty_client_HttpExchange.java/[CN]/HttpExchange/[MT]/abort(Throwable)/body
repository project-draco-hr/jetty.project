{
  if (destination.remove(this)) {
    if (LOG.isDebugEnabled())     LOG.debug("Aborting while queued {}: {}",this,cause);
    return fail(cause);
  }
 else {
    HttpChannel channel=this.channel.get();
    if (channel == null)     return fail(cause);
    boolean aborted=channel.abort(cause);
    if (LOG.isDebugEnabled())     LOG.debug("Aborted ({}) while active {}: {}",aborted,this,cause);
    return aborted;
  }
}
