{
  if (!clearPendingTryProducing())   return;
  while (true) {
    Runnable task=_producer.produce();
    if (task == null) {
      if (tryIdle())       _producer.onProductionComplete();
      return;
    }
    if (clearProducingTryPending())     _executor.execute(this);
    task.run();
    if (!tryProducing())     return;
  }
}
