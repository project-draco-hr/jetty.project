{
  try {
    loop:     while (true) {
      Runnable task=_producer.produce();
      if (task == null)       break loop;
      if (_producer.isMoreToProduce())       _executor.execute(task);
 else {
        task.run();
        break loop;
      }
    }
  }
  finally {
    _producer.onCompleted();
  }
}
