{
  Thread current=Thread.currentThread();
  String name=current.getName();
  _name=String.format("%s-acceptor-%d@%x-%s",name,_acceptor,hashCode(),AbstractConnector.this.toString());
  current.setName(_name);
synchronized (AbstractConnector.this) {
    _acceptors[_acceptor]=current;
  }
  try {
    while (isAccepting()) {
      try {
        accept(_acceptor);
      }
 catch (      Throwable e) {
        if (isAccepting())         LOG.warn(e);
 else         LOG.ignore(e);
      }
    }
  }
  finally {
    current.setName(name);
synchronized (AbstractConnector.this) {
      _acceptors[_acceptor]=null;
    }
    CountDownLatch stopping=_stopping;
    if (stopping != null)     stopping.countDown();
  }
}
