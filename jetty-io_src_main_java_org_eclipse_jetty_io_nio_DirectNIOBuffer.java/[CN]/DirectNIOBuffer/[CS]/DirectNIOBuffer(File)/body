{
  super(READONLY,NON_VOLATILE);
  FileInputStream fis=null;
  FileChannel fc=null;
  try {
    fis=new FileInputStream(file);
    fc=fis.getChannel();
    _buf=fc.map(FileChannel.MapMode.READ_ONLY,0,file.length());
    setGetIndex(0);
    setPutIndex((int)file.length());
    _access=IMMUTABLE;
  }
  finally {
    if (fc != null)     try {
      fc.close();
    }
 catch (    IOException e) {
      LOG.ignore(e);
    }
    IO.close(fis);
  }
}
