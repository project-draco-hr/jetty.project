{
  if (n == 0) {
    int gi=buffer.position();
    buffer.put(--gi,(byte)'0');
    buffer.position(gi);
  }
 else {
    boolean minus=false;
    if (n < 0) {
      minus=true;
      n=-n;
    }
    int gi=buffer.position();
    while (n > 0) {
      int d=0xf & n;
      n=n >> 4;
      buffer.put(--gi,DIGIT[d]);
    }
    if (minus)     buffer.put(--gi,(byte)'-');
    buffer.position(gi);
  }
}
