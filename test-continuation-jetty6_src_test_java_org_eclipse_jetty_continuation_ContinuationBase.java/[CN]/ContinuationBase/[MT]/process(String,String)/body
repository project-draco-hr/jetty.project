{
  String request="GET /";
  if (query != null)   request+="?" + query;
  request+=" HTTP/1.1\r\n" + "Host: localhost\r\n" + "Connection: close\r\n";
  if (content != null)   request+="Content-Length: " + content.length() + "\r\n";
  request+="\r\n" + content;
  Socket socket=new Socket("localhost",_port);
  socket.getOutputStream().write(request.getBytes("UTF-8"));
  String response=toString(socket.getInputStream());
  return response;
}
