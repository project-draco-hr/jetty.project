{
  if (_def.finished())   throw new IOException("Stream already finished");
  if ((off | len | (off + len)| (b.length - (off + len))) < 0)   throw new IndexOutOfBoundsException();
  if (len == 0)   return;
  if (!_def.finished()) {
    _def.setInput(b,off,len);
    while (!_def.needsInput()) {
      deflate();
    }
  }
}
