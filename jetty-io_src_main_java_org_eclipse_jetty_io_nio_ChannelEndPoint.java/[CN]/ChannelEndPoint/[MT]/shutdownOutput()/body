{
  if (_channel.isOpen() && _channel instanceof SocketChannel) {
    Socket socket=((SocketChannel)_channel).socket();
    if (!socket.isClosed()) {
      try {
        if (socket.isInputShutdown())         socket.close();
 else         if (!socket.isOutputShutdown())         socket.shutdownOutput();
      }
 catch (      SocketException e) {
        LOG.ignore(e);
      }
    }
  }
}
