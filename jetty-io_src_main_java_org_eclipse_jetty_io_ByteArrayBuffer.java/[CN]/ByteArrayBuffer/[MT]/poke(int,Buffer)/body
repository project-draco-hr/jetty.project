{
  _hash=0;
  int length=src.length();
  if (index + length > capacity()) {
    length=capacity() - index;
  }
  byte[] src_array=src.array();
  if (src_array != null)   System.arraycopy(src_array,src.getIndex(),_bytes,index,length);
 else   if (src_array != null) {
    int s=src.getIndex();
    for (int i=0; i < length; i++)     poke(index++,src_array[s++]);
  }
 else {
    int s=src.getIndex();
    for (int i=0; i < length; i++)     _bytes[index++]=src.peek(s++);
  }
  return length;
}
