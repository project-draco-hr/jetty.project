{
  int len=length();
  if (MAX_WRITE > 0 && len > MAX_WRITE) {
    int off=getIndex();
    while (len > 0) {
      int c=len > MAX_WRITE ? MAX_WRITE : len;
      out.write(_bytes,off,c);
      off+=c;
      len-=c;
    }
  }
 else   out.write(_bytes,getIndex(),len);
  if (!isImmutable())   clear();
}
