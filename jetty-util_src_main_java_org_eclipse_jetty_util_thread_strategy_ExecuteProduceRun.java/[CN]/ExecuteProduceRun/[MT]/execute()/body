{
  if (LOG.isDebugEnabled())   LOG.debug("{} execute",this);
  boolean produce=false;
  try (Lock locked=_lock.lock()){
    if (_idle) {
      if (_producing)       throw new IllegalStateException();
      produce=_producing=true;
      _idle=false;
    }
 else {
      _execute=true;
    }
  }
   if (produce)   produceAndRun();
}
