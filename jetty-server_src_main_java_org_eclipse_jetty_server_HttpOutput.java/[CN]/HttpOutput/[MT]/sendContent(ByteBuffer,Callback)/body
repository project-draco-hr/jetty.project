{
  if (content.hasArray() && content.limit() < content.capacity())   content=content.asReadOnlyBuffer();
  _channel.write(content,true,new Callback(){
    @Override public void succeeded(){
      closed();
      callback.succeeded();
    }
    @Override public void failed(    Throwable x){
      callback.failed(x);
    }
  }
);
}
