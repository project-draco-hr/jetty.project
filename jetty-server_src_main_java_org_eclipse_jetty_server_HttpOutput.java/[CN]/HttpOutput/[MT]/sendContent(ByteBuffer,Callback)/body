{
  if (LOG.isDebugEnabled())   LOG.debug("sendContent(buffer={},{})",BufferUtil.toDetailString(content),callback);
  write(content,true,new Callback(){
    @Override public void succeeded(){
      closed();
      callback.succeeded();
    }
    @Override public void failed(    Throwable x){
      abort(x);
      callback.failed(x);
    }
  }
);
}
