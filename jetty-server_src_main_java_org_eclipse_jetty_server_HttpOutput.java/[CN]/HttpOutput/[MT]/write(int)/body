{
  if (_closed)   throw new EOFException();
  if (_aggregate == null)   _aggregate=_channel.getByteBufferPool().acquire(getBufferSize(),false);
  BufferUtil.append(_aggregate,(byte)b);
  _written++;
  if (!closeIfAllContentWritten() && BufferUtil.isFull(_aggregate))   _channel.write(_aggregate,false);
}
