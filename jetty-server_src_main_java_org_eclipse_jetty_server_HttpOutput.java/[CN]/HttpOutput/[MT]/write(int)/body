{
  if (isClosed())   throw new EOFException("Closed");
  if (_aggregate == null)   _aggregate=_channel.getByteBufferPool().acquire(getBufferSize(),OUTPUT_BUFFER_DIRECT);
  BufferUtil.append(_aggregate,(byte)b);
  _written++;
  if (!closeIfAllContentWritten() && BufferUtil.isFull(_aggregate))   _channel.write(_aggregate,false);
}
