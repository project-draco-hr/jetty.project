{
  if (_aggregate == null || size <= getContentBufferSize())   return;
  ByteBuffer r=_channel.getConnector().getByteBufferPool().acquire(size,false);
  if (BufferUtil.hasContent(_aggregate))   BufferUtil.flipPutFlip(_aggregate,r);
  if (_aggregate != null)   _channel.getConnector().getByteBufferPool().release(_aggregate);
  _aggregate=r;
}
