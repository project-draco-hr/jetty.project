{
  ByteBuffer buffer=BufferUtil.toBuffer("GET \015\012" + "Content-Length: 0\015\012" + "Connection: close\015\012"+ "\015\012");
  HttpParser.RequestHandler handler=new Handler();
  HttpParser parser=new HttpParser(handler);
  parser.parseNext(buffer);
  assertEquals(null,_methodOrVersion);
  assertEquals("No URI",_bad);
  assertFalse(buffer.hasRemaining());
  assertEquals(HttpParser.State.CLOSE,parser.getState());
  parser.atEOF();
  parser.parseNext(BufferUtil.EMPTY_BUFFER);
  assertEquals(HttpParser.State.CLOSED,parser.getState());
}
