{
  if (_classLoader == null && _classpath != null && _classpath.size() > 0) {
    ClassLoader context=Thread.currentThread().getContextClassLoader();
    if (context == null)     _classLoader=new URLClassLoader(_classpath.toArray(new URL[_classpath.size()]));
 else     _classLoader=new URLClassLoader(_classpath.toArray(new URL[_classpath.size()]),context);
    Thread.currentThread().setContextClassLoader(_classLoader);
  }
}
