{
  if (array == null) {
    if (type == null && item != null)     type=item.getClass();
    @SuppressWarnings("unchecked") T[] na=(T[])Array.newInstance(type,1);
    na[0]=item;
    return na;
  }
 else {
    Class<?> c=array.getClass().getComponentType();
    @SuppressWarnings("unchecked") T[] na=(T[])Array.newInstance(c,Array.getLength(array) + 1);
    System.arraycopy(array,0,na,0,array.length);
    na[array.length]=item;
    return na;
  }
}
