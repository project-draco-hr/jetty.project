{
  if (streamId < 0)   throw new IllegalArgumentException("Invalid stream id: " + streamId);
  if (windowUpdate < 0)   throw new IllegalArgumentException("Invalid window update: " + windowUpdate);
  ByteBufferPool.Lease lease=new ByteBufferPool.Lease(byteBufferPool);
  ByteBuffer header=generateHeader(FrameType.WINDOW_UPDATE,4,0,streamId);
  header.putInt(windowUpdate);
  BufferUtil.flipToFlush(header,0);
  lease.append(header,true);
  return lease;
}
