{
  if (handler == null)   throw new IllegalArgumentException("Parameter handler is null.");
  try {
    Handler old_handler=_handler;
    _handler=handler;
    Server server=getServer();
    handler.setServer(server);
    addBean(handler);
    if (server != null)     server.getContainer().update(this,old_handler,handler,"handler");
    if (old_handler != null) {
      removeBean(old_handler);
    }
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
