{
  root=config.getInitParameter(ROOT_INIT_PARAM);
  if (root == null)   throw new ServletException(String.format("Missing mandatory parameter '%s'",ROOT_INIT_PARAM));
  String param=config.getInitParameter(FILES_INIT_PARAM);
  if (param == null)   throw new ServletException(String.format("Missing mandatory parameter '%s'",FILES_INIT_PARAM));
  files=param.split(" ");
}
