{
  ContentInfo contentInfo=expectedContent;
  if (contentInfo != null) {
    if (proceed) {
      LOG.debug("Proceeding {}",connection.getExchange());
      contentInfo.await();
      send();
    }
 else {
      HttpExchange exchange=connection.getExchange();
      if (exchange != null)       fail(new HttpRequestException("Expectation failed",exchange.getRequest()));
    }
  }
}
