{
  Resource r=null;
  if (_relativeResourceBase != null)   pathInContext=URIUtil.addPaths(_relativeResourceBase,pathInContext);
  try {
    if (_resourceBase != null) {
      r=_resourceBase.addPath(pathInContext);
    }
 else {
      URL u=_servletContext.getResource(pathInContext);
      r=_contextHandler.newResource(u);
    }
    if (Log.isDebugEnabled())     Log.debug("RESOURCE " + pathInContext + "="+ r);
  }
 catch (  IOException e) {
    Log.ignore(e);
  }
  if ((r == null || !r.exists()) && pathInContext.endsWith("/jetty-dir.css"))   r=_stylesheet;
  return r;
}
