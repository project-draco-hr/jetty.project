{
  boolean progress=true;
  while (progress) {
    progress=false;
    _in.compact().flip();
    if (!BufferUtil.isAtCapacity(_in) && _endp.fill(_in) > 0) {
      progress=true;
    }
    while (_blockAt > 0 && _in.remaining() > 0 && _in.remaining() < _blockAt) {
      _endp.blockReadable(10000);
      if (!BufferUtil.isAtCapacity(_in) && _endp.fill(_in) > 0)       progress=true;
    }
    if (BufferUtil.hasContent(_in) && BufferUtil.put(_in,_out) > 0)     progress=true;
    if (BufferUtil.hasContent(_out) && _endp.flush(_out) > 0)     progress=true;
    _out.compact().flip();
    if (BufferUtil.isEmpty(_out) && _endp.isInputShutdown())     _endp.shutdownOutput();
  }
  return this;
}
