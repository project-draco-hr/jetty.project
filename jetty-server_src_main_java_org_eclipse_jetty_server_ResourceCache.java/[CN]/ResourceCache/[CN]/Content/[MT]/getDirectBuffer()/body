{
  Buffer buffer=_directBuffer.get();
  if (buffer == null) {
    Buffer buffer2=ResourceCache.this.getDirectBuffer(_resource);
    if (buffer2 == null)     Log.warn("Could not load " + this);
 else     if (_directBuffer.compareAndSet(null,buffer2))     buffer=buffer2;
 else     buffer=_directBuffer.get();
  }
  if (buffer == null)   return null;
  return new View(buffer);
}
