{
  try {
    int len=(int)resource.length();
    if (len < 0) {
      LOG.warn("invalid resource: " + String.valueOf(resource) + " "+ len);
      return null;
    }
    Buffer buffer=new IndirectNIOBuffer(len);
    InputStream is=resource.getInputStream();
    buffer.readFrom(is,len);
    is.close();
    return buffer;
  }
 catch (  IOException e) {
    LOG.warn(e);
    return null;
  }
}
