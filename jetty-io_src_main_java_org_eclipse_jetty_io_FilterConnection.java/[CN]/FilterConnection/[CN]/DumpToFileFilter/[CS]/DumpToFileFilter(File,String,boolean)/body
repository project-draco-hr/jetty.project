{
  _directory=directory;
  _prefix=prefix;
  _deleteOnExit=deleteOnExit;
  if (!_directory.exists() && !_directory.mkdirs())   throw new IllegalArgumentException("cannot create " + directory);
  if (!_directory.isDirectory())   throw new IllegalArgumentException("not directory " + directory);
  if (!_directory.canWrite())   throw new IllegalArgumentException("cannot write " + directory);
}
