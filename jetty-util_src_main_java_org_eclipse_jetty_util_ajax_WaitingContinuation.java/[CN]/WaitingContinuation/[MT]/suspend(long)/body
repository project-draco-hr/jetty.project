{
synchronized (_mutex) {
    _new=false;
    _pending=true;
    boolean result;
    try {
      if (!_resumed && timeout >= 0) {
        if (timeout == 0)         _mutex.wait();
 else         if (timeout > 0)         _mutex.wait(timeout);
      }
    }
 catch (    InterruptedException e) {
      _expired=true;
      Log.ignore(e);
    }
 finally {
      result=_resumed;
      _resumed=false;
      _pending=false;
    }
    return result;
  }
}
