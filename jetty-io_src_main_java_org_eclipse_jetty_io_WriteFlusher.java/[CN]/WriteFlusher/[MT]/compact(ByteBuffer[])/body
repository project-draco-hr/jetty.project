{
  if (buffers.length < 2)   return buffers;
  int b=0;
  while (b < buffers.length && BufferUtil.isEmpty(buffers[b]))   b++;
  if (b == 0)   return buffers;
  if (b == buffers.length)   return NO_BUFFERS;
  ByteBuffer[] compact=new ByteBuffer[buffers.length - b];
  System.arraycopy(buffers,b,compact,0,compact.length);
  return compact;
}
