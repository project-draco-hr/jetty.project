{
  int length=buffers.length;
  if (length < 2)   return buffers;
  int consumed=0;
  while (consumed < length && BufferUtil.isEmpty(buffers[consumed]))   ++consumed;
  if (consumed == 0)   return buffers;
  if (consumed == length)   return EMPTY_BUFFERS;
  int newLength=length - consumed;
  ByteBuffer[] result=new ByteBuffer[newLength];
  System.arraycopy(buffers,consumed,result,0,newLength);
  return result;
}
