{
  _thread=Thread.currentThread();
  String name=_thread.getName();
  int priority=_thread.getPriority();
  try {
    if (_selectorManager._priorityDelta != 0)     _thread.setPriority(Math.max(Thread.MIN_PRIORITY,Math.min(Thread.MAX_PRIORITY,priority + _selectorManager._priorityDelta)));
    _thread.setName(String.format("%s-selector-%s@%h/%d",name,_selectorManager.getClass().getSimpleName(),_selectorManager.hashCode(),_id));
    if (SelectorManager.LOG.isDebugEnabled())     SelectorManager.LOG.debug("Starting {} on {}",_thread,this);
    while (isRunning())     select();
    while (isStopping())     select();
  }
  finally {
    if (SelectorManager.LOG.isDebugEnabled())     SelectorManager.LOG.debug("Stopped {} on {}",_thread,this);
    _thread.setName(name);
    if (_selectorManager._priorityDelta != 0)     _thread.setPriority(priority);
  }
}
