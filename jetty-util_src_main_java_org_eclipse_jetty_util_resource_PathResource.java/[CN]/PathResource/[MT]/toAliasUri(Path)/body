{
  Path abs=path;
  if (!abs.isAbsolute()) {
    abs=path.toAbsolutePath();
  }
  URI providedUri=abs.toUri();
  try {
    URI realUri=abs.toRealPath().toUri();
    if (!providedUri.equals(realUri)) {
      return realUri;
    }
  }
 catch (  IOException e) {
    LOG.ignore(e);
  }
  return null;
}
