{
  Path abs=path;
  if (!abs.isAbsolute()) {
    abs=path.toAbsolutePath();
  }
  URI providedUri=abs.toUri();
  try {
    URI realUri=abs.toRealPath().toUri();
    if (!providedUri.equals(realUri)) {
      return realUri;
    }
  }
 catch (  NoSuchFileException e) {
  }
catch (  IOException e) {
    LOG.warn("bad alias ({}) for {}",e.getClass().getName(),e.getMessage());
  }
  return null;
}
