{
  while (true) {
    ConnectState current=connect.get();
switch (current) {
case DISCONNECTED:
{
        if (!connect.compareAndSet(current,ConnectState.CONNECTING))         break;
        newConnection(this);
        return;
      }
case CONNECTING:
{
      return;
    }
case CONNECTED:
{
    process(connection);
    return;
  }
default :
{
  abort(new IllegalStateException("Invalid connection state " + current));
  return;
}
}
}
}
