{
  while (true) {
    ConnectState current=connect.get();
switch (current) {
case DISCONNECTED:
{
        if (!connect.compareAndSet(current,ConnectState.CONNECTING))         break;
        newConnection(this);
        return;
      }
case CONNECTING:
{
      return;
    }
case CONNECTED:
{
    if (process(connection,false))     break;
    return;
  }
default :
{
  throw new IllegalStateException();
}
}
}
}
