{
  LOG.debug("Scanning WEB-INF/classes");
  Set<Handler> handlers=new HashSet<Handler>();
  handlers.addAll(_discoverableAnnotationHandlers);
  if (_classInheritanceHandler != null)   handlers.add(_classInheritanceHandler);
  handlers.addAll(_containerInitializerAnnotationHandlers);
  for (  Resource dir : context.getMetaData().getWebInfClassesDirs()) {
    if (_parserTasks != null)     _parserTasks.add(new ParserTask(parser,handlers,dir,_webAppClassNameResolver));
  }
}
