{
  StringBuffer buf=new StringBuffer();
  buf.append(date);
  if (ms > 99) {
    buf.append(".");
  }
 else   if (ms > 0) {
    buf.append(".0");
  }
 else {
    buf.append(".00");
  }
  buf.append(ms);
  buf.append(':').append(severity.name()).append(':');
  buf.append(name);
  buf.append(':').append(message);
  out.write(buf.toString().getBytes());
  out.write(LN);
  if (t != null) {
    t.printStackTrace(new PrintStream(out));
    out.write(LN);
  }
  out.flush();
}
