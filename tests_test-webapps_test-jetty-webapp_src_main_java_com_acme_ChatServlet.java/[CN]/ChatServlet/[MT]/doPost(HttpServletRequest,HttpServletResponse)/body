{
  String action=request.getParameter("action");
  String message=request.getParameter("message");
  String username=request.getParameter("user");
  if (action.equals("join"))   join(request,response,username);
 else   if (action.equals("poll"))   poll(request,response,username);
 else   if (action.equals("chat"))   chat(request,response,username,message);
}
