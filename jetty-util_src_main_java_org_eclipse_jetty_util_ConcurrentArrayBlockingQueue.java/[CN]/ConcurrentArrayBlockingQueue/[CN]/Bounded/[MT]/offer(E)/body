{
  while (true) {
    int size=size();
    int nextSize=size + 1;
    if (nextSize > _capacity)     return false;
    if (_size.compareAndSet(size,nextSize)) {
      if (super.offer(item)) {
        if (size == 0)         signalConsumer();
        return true;
      }
 else {
        decrementAndGetSize();
      }
    }
  }
}
