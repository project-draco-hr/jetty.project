{
  long nanos=unit.toNanos(timeout);
  while (true) {
    E result=poll();
    if (result != null)     return result;
    final Lock lock=_lock;
    lock.lockInterruptibly();
    try {
      if (size() == 0) {
        if (nanos <= 0)         return null;
        nanos=_consumer.awaitNanos(nanos);
      }
    }
  finally {
      lock.unlock();
    }
  }
}
