{
  _lock.lock();
  try {
    if (_writeFuture != null && !_writeFuture.isComplete())     throw new IllegalStateException("previous write not complete");
    flush(buffers);
    for (    ByteBuffer b : buffers) {
      if (b.hasRemaining()) {
        _writeBuffers=buffers;
        _writeFuture=new WriteFuture();
        return _writeFuture;
      }
    }
    return COMPLETE;
  }
 catch (  IOException e) {
    return new CompletedIOFuture(e);
  }
 finally {
    _lock.unlock();
  }
}
