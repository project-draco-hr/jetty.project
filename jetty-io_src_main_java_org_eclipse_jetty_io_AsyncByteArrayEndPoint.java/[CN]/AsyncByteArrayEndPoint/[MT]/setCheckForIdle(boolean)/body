{
  _checkForIdle=check;
  if (check) {
    final TimerTask task=new TimerTask(){
      @Override public void run(){
        checkForIdleOrReadWriteTimeout(System.currentTimeMillis());
        if (_checkForIdle)         _timer.schedule(this,1000);
      }
    }
;
    _timer.schedule(task,1000);
  }
}
