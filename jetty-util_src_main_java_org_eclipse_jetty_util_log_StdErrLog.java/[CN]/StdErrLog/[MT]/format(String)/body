{
  if (msg == null)   _buffer.append("null");
 else   for (int i=0; i < msg.length(); i++) {
    char c=msg.charAt(i);
    if (Character.isISOControl(c)) {
      if (c == '\n')       _buffer.append('|');
 else       if (c == '\r')       _buffer.append('<');
 else       _buffer.append('?');
    }
 else     _buffer.append(c);
  }
}
