{
  if (th == null)   buffer.append("null");
 else {
    buffer.append('\n');
    format(buffer,th.toString());
    StackTraceElement[] elements=th.getStackTrace();
    for (int i=0; elements != null && i < elements.length; i++) {
      buffer.append("\n\tat ");
      format(buffer,elements[i].toString());
    }
  }
}
