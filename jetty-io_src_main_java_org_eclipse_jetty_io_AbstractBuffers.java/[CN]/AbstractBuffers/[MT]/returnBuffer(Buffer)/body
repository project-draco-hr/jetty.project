{
  buffer.clear();
  if (buffer.isVolatile() || buffer.isImmutable())   return;
  int size=buffer.capacity();
  final int set=(size == _headerBufferSize) ? __HEADER : (size == _responseBufferSize) ? __RESPONSE : (size == _requestBufferSize) ? __REQUEST : __OTHER;
  final ThreadBuffers thread_buffers=(ThreadBuffers)_buffers.get();
  final Buffer[] buffers=thread_buffers._buffers[set];
  for (int i=0; i < buffers.length; i++) {
    if (buffers[i] == null) {
      buffers[i]=buffer;
      return;
    }
  }
}
