{
  String uri=path;
  if (query != null && query.length() > 0)   uri+="?" + query;
  if (host == null)   onRequest(new MetaData.Request(HttpVersion.fromString(version),method,new HttpURI(uri),fields,null,0));
 else   onRequest(new MetaData.Request(HttpVersion.fromString(version),method,new HttpURI(uri),fields,host.getHost(),host.getPort()));
}
