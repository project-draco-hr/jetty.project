{
  Composite composite=(Composite)super.createDialogArea(parent);
  GridLayout gridLayout=new GridLayout();
  gridLayout.numColumns=1;
  composite.setLayout(gridLayout);
  Label label=new Label(composite,SWT.NONE);
  String msg=JettyLauncherMessages.bind(JettyLauncherMessages.JettyXmlEditDialog_Edit_jetty_xml,_jettyHome + File.separatorChar + "etc"+ File.separatorChar+ "jetty.xml");
  label.setText(msg);
  _textField=new Text(composite,SWT.MULTI | SWT.BORDER | SWT.H_SCROLL| SWT.V_SCROLL);
  _textField.addKeyListener(new KeyListener(){
    public void keyReleased(    KeyEvent e){
      validateInput();
    }
    public void keyPressed(    KeyEvent e){
    }
  }
);
  if (_lastValidatedString != null) {
    _textField.setText(_lastValidatedString);
  }
  GridData gridData=new GridData();
  gridData.horizontalAlignment=GridData.FILL;
  gridData.verticalAlignment=GridData.FILL;
  gridData.grabExcessHorizontalSpace=true;
  gridData.grabExcessVerticalSpace=true;
  _textField.setLayoutData(gridData);
  _statusLabel=new Label(composite,SWT.NONE);
  _statusLabel.setText(" ");
  gridData=new GridData();
  gridData.horizontalAlignment=GridData.FILL;
  gridData.grabExcessHorizontalSpace=true;
  _statusLabel.setLayoutData(gridData);
  return composite;
}
