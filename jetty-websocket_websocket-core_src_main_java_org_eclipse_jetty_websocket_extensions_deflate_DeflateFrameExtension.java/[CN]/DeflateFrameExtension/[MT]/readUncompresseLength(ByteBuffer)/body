{
  int length=data.get();
  int bytes=0;
  if (length == 127) {
    length=0;
    bytes=8;
  }
 else   if (length == 126) {
    length=0;
    bytes=2;
  }
  while (bytes > 0) {
    --bytes;
    byte b=data.get();
    length|=(b & 0xFF) << (8 * bytes);
  }
  assertSanePayloadLength(length);
  return length;
}
