{
  if (Thread.currentThread() != _thread) {
    _changes.add(change);
    if (LOG.isDebugEnabled())     LOG.debug("Queued change {}",change);
    boolean wakeup=needsWakeup;
    if (wakeup)     wakeup();
    return false;
  }
 else {
    if (LOG.isDebugEnabled())     LOG.debug("Submitted change {}",change);
    runChanges();
    runChange(change);
    return true;
  }
}
