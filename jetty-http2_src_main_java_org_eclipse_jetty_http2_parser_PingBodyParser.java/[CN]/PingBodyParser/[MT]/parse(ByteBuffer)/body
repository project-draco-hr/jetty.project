{
  while (buffer.hasRemaining()) {
switch (state) {
case PAYLOAD:
{
        payload=new byte[8];
        if (buffer.remaining() >= 8) {
          buffer.get(payload);
          return onPing(payload);
        }
 else {
          state=State.PAYLOAD_BYTES;
          cursor=8;
        }
        break;
      }
case PAYLOAD_BYTES:
{
      payload[8 - cursor]=buffer.get();
      --cursor;
      if (cursor == 0) {
        return onPing(payload);
      }
      break;
    }
default :
{
    throw new IllegalStateException();
  }
}
}
return Result.PENDING;
}
