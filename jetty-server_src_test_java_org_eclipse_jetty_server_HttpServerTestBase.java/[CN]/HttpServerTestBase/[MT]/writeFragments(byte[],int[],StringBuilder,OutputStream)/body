{
  int last=0;
  for (int j=0; j < points.length; ++j) {
    int point=points[j];
    os.write(bytes,last,point - last);
    last=point;
    os.flush();
    Thread.sleep(PAUSE);
    message.append(" point #" + (j + 1) + ": "+ point);
  }
  os.write(bytes,last,bytes.length - last);
  os.flush();
  Thread.sleep(PAUSE);
}
