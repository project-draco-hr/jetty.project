{
  BufferedReader br=null;
  try {
    br=new BufferedReader(new InputStreamReader(client.getInputStream()));
    StringBuilder sb=new StringBuilder();
    String line;
    while ((line=br.readLine()) != null) {
      sb.append(line);
      sb.append('\n');
    }
    return sb.toString();
  }
  finally {
    if (br != null) {
      br.close();
    }
  }
}
