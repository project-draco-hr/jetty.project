{
  BufferedReader br=null;
  StringBuilder sb=new StringBuilder();
  try {
    br=new BufferedReader(new InputStreamReader(client.getInputStream()));
    String line;
    while ((line=br.readLine()) != null) {
      sb.append(line);
      sb.append('\n');
    }
    return sb.toString();
  }
 catch (  IOException e) {
    System.err.println(e + " while reading '" + sb+ "'");
    throw e;
  }
 finally {
    if (br != null) {
      br.close();
    }
  }
}
