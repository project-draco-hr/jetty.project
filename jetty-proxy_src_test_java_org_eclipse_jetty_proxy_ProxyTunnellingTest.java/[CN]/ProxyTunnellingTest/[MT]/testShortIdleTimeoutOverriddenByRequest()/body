{
  long idleTimeout=500;
  startSSLServer(new ServerHandler());
  startProxy(new ConnectHandler(){
    @Override protected void handleConnect(    Request baseRequest,    HttpServletRequest request,    HttpServletResponse response,    String serverAddress){
      try {
        Thread.sleep(2 * idleTimeout);
        super.handleConnect(baseRequest,request,response,serverAddress);
      }
 catch (      InterruptedException x) {
        onConnectFailure(request,response,null,x);
      }
    }
  }
);
  HttpClient httpClient=new HttpClient(sslContextFactory);
  httpClient.getProxyConfiguration().getProxies().add(new HttpProxy("localhost",proxyPort()));
  httpClient.setIdleTimeout(idleTimeout);
  httpClient.start();
  try {
    String host="localhost";
    String body="BODY";
    ContentResponse response=httpClient.newRequest(host,serverConnector.getLocalPort()).scheme(HttpScheme.HTTPS.asString()).method(HttpMethod.GET).path("/echo?body=" + URLEncoder.encode(body,"UTF-8")).idleTimeout(10 * idleTimeout,TimeUnit.MILLISECONDS).send();
    assertEquals(HttpStatus.OK_200,response.getStatus());
    String content=response.getContentAsString();
    assertEquals(body,content);
  }
  finally {
    httpClient.stop();
  }
}
