{
  startSSLServer(new ServerHandler());
  startProxy();
  HttpClient httpClient=new HttpClient(sslContextFactory);
  httpClient.getProxyConfiguration().getProxies().add(new HttpProxy("localhost",proxyPort()));
  httpClient.start();
  try {
    String body="BODY";
    ContentResponse response=httpClient.newRequest("localhost",serverConnector.getLocalPort()).scheme(HttpScheme.HTTPS.asString()).method(HttpMethod.GET).path("/echo?body=" + URLEncoder.encode(body,"UTF-8")).send();
    assertEquals(HttpStatus.OK_200,response.getStatus());
    String content=response.getContentAsString();
    assertEquals(body,content);
  }
  finally {
    httpClient.stop();
  }
}
