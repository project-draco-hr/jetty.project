{
  final CountDownLatch openLatch=new CountDownLatch(2);
  final CountDownLatch closeLatch=new CountDownLatch(2);
  init(new WebSocket.OnTextMessage(){
    @Override public void onClose(    int closeCode,    String message){
      closeLatch.countDown();
    }
    @Override public void onMessage(    String data){
    }
    @Override public void onOpen(    Connection connection){
      openLatch.countDown();
    }
  }
);
  Assert.assertTrue(openLatch.await(5,TimeUnit.SECONDS));
  context.stop();
  Assert.assertTrue(closeLatch.await(5,TimeUnit.SECONDS));
}
