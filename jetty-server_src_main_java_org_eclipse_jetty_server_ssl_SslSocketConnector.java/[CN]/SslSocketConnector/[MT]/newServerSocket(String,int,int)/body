{
  SSLServerSocketFactory factory=_sslContextFactory.getSslContext().getServerSocketFactory();
  SSLServerSocket socket=(SSLServerSocket)(host == null ? factory.createServerSocket(port,backlog) : factory.createServerSocket(port,backlog,InetAddress.getByName(host)));
  if (_sslContextFactory.getWantClientAuth())   socket.setWantClientAuth(_sslContextFactory.getWantClientAuth());
  if (_sslContextFactory.getNeedClientAuth())   socket.setNeedClientAuth(_sslContextFactory.getNeedClientAuth());
  socket.setEnabledCipherSuites(_sslContextFactory.selectCipherSuites(socket.getEnabledCipherSuites(),socket.getSupportedCipherSuites()));
  return socket;
}
