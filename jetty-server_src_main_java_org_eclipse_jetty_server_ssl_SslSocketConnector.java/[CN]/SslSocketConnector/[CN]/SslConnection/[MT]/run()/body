{
  try {
    int handshakeTimeout=getHandshakeTimeout();
    int oldTimeout=_socket.getSoTimeout();
    if (handshakeTimeout > 0)     _socket.setSoTimeout(handshakeTimeout);
    ((SSLSocket)_socket).startHandshake();
    if (handshakeTimeout > 0)     _socket.setSoTimeout(oldTimeout);
    super.run();
  }
 catch (  SSLException e) {
    Log.debug(e);
    try {
      close();
    }
 catch (    IOException e2) {
      Log.ignore(e2);
    }
  }
catch (  IOException e) {
    Log.debug(e);
    try {
      close();
    }
 catch (    IOException e2) {
      Log.ignore(e2);
    }
  }
}
