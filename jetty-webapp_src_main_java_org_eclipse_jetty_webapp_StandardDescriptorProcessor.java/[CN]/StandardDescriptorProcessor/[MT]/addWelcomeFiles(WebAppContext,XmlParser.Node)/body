{
  Iterator<XmlParser.Node> iter=node.iterator("welcome-file");
  while (iter.hasNext()) {
    XmlParser.Node indexNode=(XmlParser.Node)iter.next();
    String welcome=indexNode.toString(false,true);
    if (welcome != null && welcome.trim().length() > 0)     context.setWelcomeFiles((String[])LazyList.addToArray(context.getWelcomeFiles(),welcome,String.class));
  }
}
