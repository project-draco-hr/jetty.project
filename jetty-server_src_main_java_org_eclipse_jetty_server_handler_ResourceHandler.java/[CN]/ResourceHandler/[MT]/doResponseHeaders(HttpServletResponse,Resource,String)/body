{
  if (mimeType != null)   response.setContentType(mimeType);
  long length=resource.length();
  if (response instanceof Response) {
    HttpFields fields=((Response)response).getHttpFields();
    if (length > 0)     fields.putLongField(HttpHeader.CONTENT_LENGTH,length);
    if (_cacheControl != null)     fields.put(HttpHeader.CACHE_CONTROL,_cacheControl);
  }
 else {
    if (length > 0)     response.setHeader(HttpHeader.CONTENT_LENGTH.asString(),Long.toString(length));
    if (_cacheControl != null)     response.setHeader(HttpHeader.CACHE_CONTROL.asString(),_cacheControl.toString());
  }
}
