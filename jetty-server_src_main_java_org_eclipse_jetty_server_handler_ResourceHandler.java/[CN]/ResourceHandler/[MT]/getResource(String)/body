{
  if (path == null || !path.startsWith("/"))   throw new MalformedURLException(path);
  Resource base=_baseResource;
  if (base == null) {
    if (_context == null)     return null;
    return _context.getResource(path);
  }
  try {
    path=URIUtil.canonicalPath(path);
    Resource r=base.addPath(path);
    if (r != null && r.isAlias() && !_context.checkAlias(path,r))     return null;
    return r;
  }
 catch (  Exception e) {
    LOG.ignore(e);
  }
  return null;
}
