{
  try {
    _stylesheet=Resource.newResource(stylesheet);
    if (!_stylesheet.exists()) {
      Log.warn("unable to find custom stylesheet: " + stylesheet);
      _stylesheet=null;
    }
  }
 catch (  Exception e) {
    Log.warn(e.toString());
    Log.debug(e);
    throw new IllegalArgumentException(stylesheet.toString());
  }
}
