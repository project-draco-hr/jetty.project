{
  if (_state != State.HEADER)   throw new IllegalStateException("STATE!=START");
  _method=null;
  _status=status;
  if (reason == null)   _reason=null;
 else {
    if (reason.length() > 1024)     reason=reason.substring(0,1024);
    _reason=StringUtil.getBytes(reason);
    for (int i=_reason.length; i-- > 0; )     if (_reason[i] == '\r' || _reason[i] == '\n')     _reason[i]='?';
  }
}
