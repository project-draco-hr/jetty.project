{
  _security.setAuthenticator(new BasicAuthenticator());
  _security.setStrict(false);
  _server.start();
  String response;
  response=_connector.getResponses("GET /ctx/noauth/info HTTP/1.0\r\n" + "\r\n");
  assertThat(response,startsWith("HTTP/1.1 200 OK"));
  assertThat(response,containsString("user=null"));
  response=_connector.getResponses("GET /ctx/noauth/info HTTP/1.0\r\n" + "Authorization: Basic " + B64Code.encode("admin:wrong") + "\r\n"+ "\r\n");
  assertThat(response,startsWith("HTTP/1.1 200 OK"));
  assertThat(response,containsString("user=null"));
  response=_connector.getResponses("GET /ctx/noauth/info HTTP/1.0\r\n" + "Authorization: Basic " + B64Code.encode("admin:password") + "\r\n"+ "\r\n");
  assertThat(response,startsWith("HTTP/1.1 200 OK"));
  assertThat(response,containsString("user=admin"));
}
