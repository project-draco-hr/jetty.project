{
  Object o=getAttribute(attribute);
  if (o == null)   return;
  Collection<?> c=(o instanceof Collection) ? (Collection<?>)o : Collections.singletonList(o);
  StringBuilder v=new StringBuilder();
  for (  Object i : c) {
    if (i != null) {
      if (v.length() > 0)       v.append(",\n    ");
 else       v.append("\n    ");
      if (resourceBase == null)       QuotedStringTokenizer.quote(v,i.toString());
 else       QuotedStringTokenizer.quote(v,i.toString().replace(resourceBase,"${WAR}/"));
    }
  }
  out.open("context-param").tag("param-name",attribute).tagCDATA("param-value",v.toString()).close();
}
