{
  stream.defaultReadObject();
  SecurityHandler security=SecurityHandler.getCurrentSecurityHandler();
  if (security == null)   throw new IllegalStateException("!SecurityHandler");
  LoginService login_service=security.getLoginService();
  if (login_service == null)   throw new IllegalStateException("!LoginService");
  _userIdentity=login_service.login(_name,_credentials);
  Log.debug("Deserialized and relogged in {}",this);
}
