{
  try {
    if (_secure) {
      Policy.setPolicy(_config.getPolicyInstance(cl));
      System.setSecurityManager(new SecurityManager());
    }
 else {
      Policy policy=Policy.getPolicy();
      if (policy != null) {
        policy.refresh();
      }
    }
  }
 catch (  Exception e) {
    e.printStackTrace(System.err);
    System.exit(ERR_SECURITY);
  }
}
