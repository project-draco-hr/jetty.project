    String property;
    if ("version".equalsIgnoreCase(name))     property=_version;
 else     property=System.getProperty(s.substring(i1 + 2,i2),"");
    s=s.substring(0,i1) + property + s.substring(i2 + 1);
  }
  return s;
}
