{
  if (object == null) {
    appendNull(buffer);
    return;
  }
  buffer.append('{');
  Iterator iter=object.entrySet().iterator();
  while (iter.hasNext()) {
    Map.Entry entry=(Map.Entry)iter.next();
    QuotedStringTokenizer.quote(buffer,entry.getKey().toString());
    buffer.append(':');
    append(buffer,entry.getValue());
    if (iter.hasNext())     buffer.append(',');
  }
  buffer.append('}');
}
