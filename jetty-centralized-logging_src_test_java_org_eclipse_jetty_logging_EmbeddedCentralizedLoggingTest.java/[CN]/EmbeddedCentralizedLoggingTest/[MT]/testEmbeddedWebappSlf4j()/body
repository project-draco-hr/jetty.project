{
  Server server=createWebAppServer("/slf4j","dummy-webapp-logging-slf4j.war");
  server.start();
  SimpleRequest.get(server,"/slf4j/logging");
  server.stop();
  TestAppender.LogEvent expectedLogs[]={new LogEvent(null,-1,Severity.DEBUG,"LoggingServlet","LoggingServlet(slf4j) initialized",null),new LogEvent(null,-1,Severity.INFO,"LoggingServlet","LoggingServlet(slf4j) GET requested",null)};
  assertContainsLogEvents(testAppender,expectedLogs);
}
