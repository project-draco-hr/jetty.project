{
  Server server=createWebAppServer("/slf4j","dummy-webapp-logging-slf4j.war");
  server.start();
  SimpleRequest.get(server,"/slf4j/logging");
  server.stop();
  TestAppender.LogEvent expectedLogs[]={new LogEvent(Severity.DEBUG,LOGGING_SERVLET_ID,"LoggingServlet(slf4j) initialized"),new LogEvent(Severity.INFO,LOGGING_SERVLET_ID,"LoggingServlet(slf4j) GET requested")};
  assertContainsLogEvents(testAppender,expectedLogs);
}
