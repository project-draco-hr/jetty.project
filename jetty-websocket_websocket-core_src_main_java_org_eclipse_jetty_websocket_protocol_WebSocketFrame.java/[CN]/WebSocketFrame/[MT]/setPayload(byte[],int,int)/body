{
  if (buf == null) {
    data=null;
    return this;
  }
  if (opcode.isControlFrame()) {
    if (len > WebSocketFrame.MAX_CONTROL_PAYLOAD) {
      throw new ProtocolException("Control Payloads can not exceed 125 bytes in length.");
    }
  }
  data=ByteBuffer.allocate(len);
  BufferUtil.clearToFill(data);
  data.put(buf,0,len);
  return this;
}
