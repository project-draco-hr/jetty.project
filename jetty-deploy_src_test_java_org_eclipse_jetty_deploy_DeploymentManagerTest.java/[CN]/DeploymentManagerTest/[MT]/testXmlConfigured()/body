{
  XmlConfiguredJetty jetty=null;
  try {
    jetty=new XmlConfiguredJetty(testdir);
    jetty.addConfiguration("jetty.xml");
    jetty.addConfiguration("jetty-deploymgr-contexts.xml");
    jetty.load();
    jetty.start();
  }
  finally {
    if (jetty != null) {
      try {
        jetty.stop();
      }
 catch (      Exception ignore) {
      }
    }
  }
}
