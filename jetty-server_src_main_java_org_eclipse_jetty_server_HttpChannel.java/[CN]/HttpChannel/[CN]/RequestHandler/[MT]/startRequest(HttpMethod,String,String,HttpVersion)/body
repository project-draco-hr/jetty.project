{
  _host=false;
  _expect=false;
  _expect100Continue=false;
  _expect102Processing=false;
  if (_request.getTimeStamp() == 0)   _request.setTimeStamp(System.currentTimeMillis());
  _request.setMethod(httpMethod,method);
  try {
    if (httpMethod == HttpMethod.CONNECT)     _uri.parseConnect(uri);
 else     _uri.parse(uri);
    _request.setUri(_uri);
    _version=version == null ? HttpVersion.HTTP_0_9 : version;
    _request.setHttpVersion(_version);
  }
 catch (  Exception e) {
    LOG.debug(e);
    if (e instanceof HttpException)     throw (HttpException)e;
    throw new HttpException(HttpStatus.BAD_REQUEST_400,null,e);
  }
  return false;
}
