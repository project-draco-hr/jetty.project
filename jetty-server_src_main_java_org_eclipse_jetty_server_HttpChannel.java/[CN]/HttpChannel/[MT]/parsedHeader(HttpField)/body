{
  HttpHeader header=field.getHeader();
  String value=field.getValue();
  if (value == null)   value="";
  if (header != null) {
switch (header) {
case CONTENT_TYPE:
      MimeTypes.Type mime=MimeTypes.CACHE.get(value);
    String charset=(mime == null || mime.getCharset() == null) ? MimeTypes.getCharsetFromContentType(value) : mime.getCharset().toString();
  if (charset != null)   _request.setCharacterEncodingUnchecked(charset);
break;
default :
}
}
if (field.getName() != null) _request.getHttpFields().add(field);
return false;
}
