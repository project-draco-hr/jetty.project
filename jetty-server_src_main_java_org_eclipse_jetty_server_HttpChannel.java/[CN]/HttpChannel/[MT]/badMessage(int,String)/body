{
  if (status < 400 || status > 599)   status=HttpStatus.BAD_REQUEST_400;
  try {
    if (_state.handling() == Next.CONTINUE)     sendResponse(new ResponseInfo(HttpVersion.HTTP_1_1,new HttpFields(),0,status,reason,false),null,true);
  }
 catch (  IOException e) {
    LOG.warn("badMessage",e);
  }
 finally {
    if (_state.unhandle() == Next.COMPLETE)     _state.completed();
  }
}
