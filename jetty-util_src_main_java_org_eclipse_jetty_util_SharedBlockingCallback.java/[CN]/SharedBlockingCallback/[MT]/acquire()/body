{
  _blocker._lock.lock();
  try {
    while (_blocker._state != IDLE)     _blocker._idle.await();
    _blocker._state=null;
  }
 catch (  final InterruptedException e) {
    throw new InterruptedIOException(){
{
        initCause(e);
      }
    }
;
  }
 finally {
    _blocker._lock.unlock();
  }
  return _blocker;
}
