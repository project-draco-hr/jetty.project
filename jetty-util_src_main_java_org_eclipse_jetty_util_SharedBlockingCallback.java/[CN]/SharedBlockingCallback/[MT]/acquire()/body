{
  _lock.lock();
  long idle=getIdleTimeout();
  try {
    while (_blocker._state != IDLE) {
      if (idle > 0) {
        if (!_idle.await(idle,TimeUnit.MILLISECONDS))         throw new IOException(new TimeoutException());
      }
 else       _idle.await();
    }
    _blocker._state=null;
  }
 catch (  final InterruptedException e) {
    throw new InterruptedIOException(){
{
        initCause(e);
      }
    }
;
  }
 finally {
    _lock.unlock();
  }
  return _blocker;
}
