{
  _lock.lock();
  try {
    if (_state == null) {
      if (cause == null)       _state=FAILED;
 else       if (cause instanceof BlockerTimeoutException)       _state=new IOException(cause);
 else       _state=cause;
      _complete.signalAll();
    }
 else     throw new IllegalStateException(_state);
  }
  finally {
    _lock.unlock();
  }
}
