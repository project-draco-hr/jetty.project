{
  _lock.lock();
  try {
    if (_state == null) {
      if (cause == null)       LOG.warn("null failed cause (please report stack trace) ",new Throwable());
      _state=cause == null ? FAILED : cause;
      _complete.signalAll();
    }
 else     if (_state == IDLE)     throw new IllegalStateException("IDLE");
  }
  finally {
    _lock.unlock();
  }
}
