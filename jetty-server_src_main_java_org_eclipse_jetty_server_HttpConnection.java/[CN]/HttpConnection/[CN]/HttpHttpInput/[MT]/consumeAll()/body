{
  if (!_generator.isPersistent()) {
    _parser.setState(HttpParser.State.CLOSED);
synchronized (lock()) {
      _inputQ.clear();
    }
  }
 else {
    while (true) {
synchronized (lock()) {
        _inputQ.clear();
      }
      if (_parser.isComplete() || _parser.isClosed())       return;
      try {
        blockForContent();
      }
 catch (      IOException e) {
        LOG.warn(e);
      }
    }
  }
}
