{
  if (_responseBuffer != null && _responseBuffer.capacity() >= size)   return;
  if (_responseBuffer == null && _httpConfig.getResponseBufferSize() >= size)   return;
  ByteBuffer r=_bufferPool.acquire(size,false);
  if (_responseBuffer != null) {
    BufferUtil.append(_responseBuffer,r);
    _bufferPool.release(_responseBuffer);
  }
  _responseBuffer=r;
}
