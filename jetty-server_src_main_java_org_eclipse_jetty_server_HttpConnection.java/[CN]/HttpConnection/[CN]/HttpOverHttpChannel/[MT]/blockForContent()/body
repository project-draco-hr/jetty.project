{
  while (_endp.isOpen()) {
    try {
      getEndPoint().readable().block();
      if (_requestBuffer == null)       _requestBuffer=_connector.getRequestBuffers().getBuffer();
      if (BufferUtil.hasContent(_requestBuffer) && _parser.parseNext(_requestBuffer))       return;
    }
 catch (    InterruptedException e) {
      LOG.debug(e);
    }
catch (    ExecutionException e) {
      LOG.debug(e);
      DispatchedIOFuture.rethrow(e);
    }
 finally {
      if (_requestBuffer != null && !_requestBuffer.hasRemaining() && _channel.available() == 0) {
        _connector.getRequestBuffers().returnBuffer(_requestBuffer);
        _requestBuffer=null;
      }
    }
  }
}
