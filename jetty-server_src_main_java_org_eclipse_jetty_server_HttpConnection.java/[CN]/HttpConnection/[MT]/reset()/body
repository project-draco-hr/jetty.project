{
  if (_channel.isExpecting100Continue()) {
    _parser.reset();
    _parser.close();
    if (getEndPoint().isOpen())     fillInterested();
  }
 else   if (_generator.isPersistent())   _parser.reset();
 else {
    _parser.close();
    if (getEndPoint().isOpen())     fillInterested();
  }
  _generator.reset();
  _channel.reset();
  releaseRequestBuffer();
  if (_chunk != null) {
    _bufferPool.release(_chunk);
    _chunk=null;
  }
}
