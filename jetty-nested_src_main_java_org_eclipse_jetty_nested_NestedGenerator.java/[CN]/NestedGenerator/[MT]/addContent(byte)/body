{
  if (_noContent)   return false;
  if (_last || _state == STATE_END)   throw new IllegalStateException("Closed");
  if (!_endp.isOpen()) {
    _state=STATE_END;
    return false;
  }
  if (_content != null && _content.length() > 0) {
    flushBuffer();
    if (_content != null && _content.length() > 0)     throw new IllegalStateException("FULL");
  }
  _contentWritten++;
  if (_head)   return false;
  initContent();
  _buffer.put(b);
  return _buffer.space() <= 1;
}
