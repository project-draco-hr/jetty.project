{
  StringBuffer regex=new StringBuffer();
  for (  char c : classPattern.toCharArray()) {
    if (c == '.') {
      regex.append("\\.");
    }
 else     if (c == '*') {
      regex.append(".*");
    }
 else {
      regex.append(c);
    }
  }
  classPatterns.put(classPattern,Pattern.compile(regex.toString()));
}
