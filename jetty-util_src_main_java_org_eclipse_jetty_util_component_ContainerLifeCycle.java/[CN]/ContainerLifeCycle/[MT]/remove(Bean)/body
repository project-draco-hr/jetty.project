{
  if (_beans.remove(bean)) {
    boolean wasManaged=bean.isManaged();
    unmanage(bean);
    for (    Container.Listener l : _listeners)     l.beanRemoved(this,bean._bean);
    if (bean._bean instanceof Container.Listener)     removeEventListener((Container.Listener)bean._bean);
    if (wasManaged && bean._bean instanceof LifeCycle) {
      try {
        LifeCycle lc=(LifeCycle)bean._bean;
        if (lc.isRunning())         stop(lc);
      }
 catch (      RuntimeException|Error e) {
        throw e;
      }
catch (      Exception e) {
        throw new RuntimeException(e);
      }
    }
    return true;
  }
  return false;
}
