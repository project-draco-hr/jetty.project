{
  Thread t=null;
synchronized (this) {
    if (thread != null && thread.isAlive()) {
      if (DEBUG)       System.err.printf("ShutdownMonitorThread already started");
      return;
    }
    thread=new Thread(new ShutdownMonitorRunnable());
    thread.setDaemon(true);
    thread.setName("ShutdownMonitor");
    t=thread;
  }
  if (t != null)   t.start();
}
