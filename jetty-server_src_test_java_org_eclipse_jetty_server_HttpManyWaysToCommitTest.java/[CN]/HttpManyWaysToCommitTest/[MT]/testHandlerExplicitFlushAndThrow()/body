{
  server.setHandler(new ExplicitFlushHandler(true));
  server.start();
  SimpleHttpParser.TestHttpResponse response=executeRequest();
  assertThat("response code is 200",response.getCode(),is("200"));
  assertThat("response body is foobar",response.getBody(),is("foobar"));
  if ("HTTP/1.1".equals(httpVersion))   assertHeader(response,"transfer-encoding","chunked");
}
