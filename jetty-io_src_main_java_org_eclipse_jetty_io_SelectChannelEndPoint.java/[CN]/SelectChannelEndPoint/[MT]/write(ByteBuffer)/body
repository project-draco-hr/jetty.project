{
  _lock.lock();
  try {
    if (_writeFuture != null && !_writeFuture.isDone())     throw new IllegalStateException("previous write not complete");
    flush(buffers);
    for (    ByteBuffer b : buffers) {
      if (b.hasRemaining()) {
        _writeBuffers=buffers;
        _writeFuture=new InterestedFuture(SelectionKey.OP_WRITE);
        _interestOps=_interestOps | SelectionKey.OP_WRITE;
        updateKey();
        return _writeFuture;
      }
    }
    return COMPLETE;
  }
 catch (  IOException e) {
    return new DoneIOFuture(e);
  }
 finally {
    _lock.unlock();
  }
}
