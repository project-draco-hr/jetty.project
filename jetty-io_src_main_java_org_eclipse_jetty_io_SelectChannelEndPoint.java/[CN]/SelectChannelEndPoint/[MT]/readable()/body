{
  _lock.lock();
  try {
    if (_readFuture != null && !_readFuture.isDone())     throw new IllegalStateException("previous read not complete");
    _readFuture=new InterestedFuture(SelectionKey.OP_READ);
    _interestOps=_interestOps | SelectionKey.OP_READ;
    updateKey();
    return _readFuture;
  }
  finally {
    _lock.unlock();
  }
}
