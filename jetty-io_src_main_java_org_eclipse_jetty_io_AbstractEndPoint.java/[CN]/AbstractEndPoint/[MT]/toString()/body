{
  Class<?> c=getClass();
  String name=c.getSimpleName();
  while (name.length() == 0 && c.getSuperclass() != null) {
    c=c.getSuperclass();
    name=c.getSimpleName();
  }
  return String.format("%s@%x{%s<->%d,%s,%s,%s,%s,%s,%d/%d,%s}",name,hashCode(),getRemoteAddress(),getLocalAddress().getPort(),isOpen() ? "Open" : "CLOSED",isInputShutdown() ? "ISHUT" : "in",isOutputShutdown() ? "OSHUT" : "out",_fillInterest.isInterested() ? "R" : "-",_writeFlusher.isInProgress() ? "W" : "-",getIdleFor(),getIdleTimeout(),getConnection() == null ? null : getConnection().getClass().getSimpleName());
}
