{
  if (handler instanceof ServletHandler)   setServletHandler((ServletHandler)handler);
 else   if (handler instanceof SessionHandler)   setSessionHandler((SessionHandler)handler);
 else   if (handler instanceof SecurityHandler)   setSecurityHandler((SecurityHandler)handler);
 else   if (handler == null || handler instanceof HandlerWrapper) {
    super.setHandler(handler);
    relinkHandlers();
  }
 else   throw new IllegalArgumentException();
}
