{
  _fooContainerRule.setVirtualHosts(ruleHosts);
  _handler.setRules(new Rule[]{_fooContainerRule});
  for (  String host : requestHosts) {
    _request.setServerName(host);
    _request.setRequestURI("/cheese/bar");
    handleRequest();
    if (succeed)     assertEquals("{_fooContainerRule, Host: " + host + "}: should apply _fooRule","/cheese/fooRule",_request.getRequestURI());
 else     assertEquals("{_fooContainerRule, Host: " + host + "}: should not apply _fooRule","/cheese/bar",_request.getRequestURI());
  }
}
