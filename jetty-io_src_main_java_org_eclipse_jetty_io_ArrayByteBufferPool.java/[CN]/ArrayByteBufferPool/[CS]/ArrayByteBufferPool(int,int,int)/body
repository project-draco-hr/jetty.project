{
  if (minSize >= increment)   throw new IllegalArgumentException("minSize >= increment");
  if ((maxSize % increment) != 0 || increment >= maxSize)   throw new IllegalArgumentException("increment must be a divisor of maxSize");
  _min=minSize;
  _inc=increment;
  _direct=new Bucket[maxSize / increment];
  _indirect=new Bucket[maxSize / increment];
  int size=0;
  for (int i=0; i < _direct.length; i++) {
    size+=_inc;
    _direct[i]=new Bucket(size);
    _indirect[i]=new Bucket(size);
  }
}
