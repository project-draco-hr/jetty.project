{
  boolean ishut=isInputShutdown();
  if (DEBUG)   LOG.debug("{} shutdownOutput: oshut={}, ishut={}",SslConnection.this,isOutputShutdown(),ishut);
  if (ishut) {
    getEndPoint().close();
  }
 else {
    try {
      _sslEngine.closeOutbound();
      flush(BufferUtil.EMPTY_BUFFER);
      getEndPoint().shutdownOutput();
      SslConnection.this.fillInterested();
    }
 catch (    Exception e) {
      LOG.ignore(e);
      getEndPoint().close();
    }
  }
}
