{
  boolean ishut=isInputShutdown();
  boolean oshut=isOutputShutdown();
  if (DEBUG)   LOG.debug("{} shutdownOutput: oshut={}, ishut={}",SslConnection.this,oshut,ishut);
  if (ishut) {
    getEndPoint().close();
  }
 else   if (!oshut) {
    try {
      _sslEngine.closeOutbound();
      flush(BufferUtil.EMPTY_BUFFER);
    }
 catch (    Exception e) {
      LOG.ignore(e);
      getEndPoint().close();
    }
  }
}
