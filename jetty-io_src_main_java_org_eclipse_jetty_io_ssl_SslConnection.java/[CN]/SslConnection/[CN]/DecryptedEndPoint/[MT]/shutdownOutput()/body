{
  if (isInputShutdown()) {
    getEndPoint().close();
  }
 else {
    try {
      _sslEngine.closeOutbound();
      flush(BufferUtil.EMPTY_BUFFER);
      fillInterested(new Callback(){
        @Override public void succeeded(){
          getEndPoint().close();
        }
        @Override public void failed(        Throwable x){
          getEndPoint().close();
        }
      }
);
    }
 catch (    Exception e) {
      LOG.ignore(e);
      getEndPoint().close();
    }
  }
}
