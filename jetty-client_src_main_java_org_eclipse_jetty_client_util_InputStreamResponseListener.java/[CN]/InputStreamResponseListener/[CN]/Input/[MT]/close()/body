{
  Callback callback=null;
synchronized (lock) {
    if (closed)     return;
    closed=true;
    if (chunk != null)     callback=chunk.callback;
    lock.notifyAll();
  }
  if (LOG.isDebugEnabled())   LOG.debug("InputStream close");
  if (callback != null)   callback.failed(new AsynchronousCloseException());
  super.close();
}
