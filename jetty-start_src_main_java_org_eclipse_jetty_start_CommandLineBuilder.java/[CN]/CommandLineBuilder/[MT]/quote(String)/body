{
  boolean needsQuoting=arg.indexOf(' ') >= 0 || arg.indexOf('"') >= 0;
  if (!needsQuoting) {
    return arg;
  }
  StringBuilder buf=new StringBuilder();
  boolean escaped=false;
  boolean quoted=false;
  for (  char c : arg.toCharArray()) {
    if (!quoted && !escaped && ((c == '"') || (c == ' '))) {
      buf.append("\\");
    }
    if (!escaped && c == '\'') {
      quoted=!quoted;
    }
    escaped=(c == '\\');
    buf.append(c);
  }
  return buf.toString();
}
