{
  String host=httpRequest.getHeader("Host");
  if (host != null) {
    int colon=host.indexOf(':');
    if (colon > 0) {
      host=host.substring(0,colon);
    }
    if (suffix != null && host.endsWith(suffix)) {
      return host.substring(0,host.length() - suffix.length());
    }
  }
  return host;
}
