{
  mark(buf.length);
  while (true) {
    int b=super.read();
    if (markpos < 0)     throw new IOException("Buffer size exceeded: no line terminator");
    if (b == -1) {
      int m=markpos;
      markpos=-1;
      if (pos > m)       return new String(buf,m,pos - m,StringUtil.__UTF8_CHARSET);
      return null;
    }
    if (b == '\r') {
      int p=pos;
      if (_seenCRLF && pos < count) {
        if (buf[pos] == '\n')         pos+=1;
      }
 else       _skipLF=true;
      int m=markpos;
      markpos=-1;
      return new String(buf,m,p - m - 1,StringUtil.__UTF8_CHARSET);
    }
    if (b == '\n') {
      if (_skipLF) {
        _skipLF=false;
        _seenCRLF=true;
        markpos++;
        continue;
      }
      int m=markpos;
      markpos=-1;
      return new String(buf,m,pos - m - 1,StringUtil.__UTF8_CHARSET);
    }
  }
}
