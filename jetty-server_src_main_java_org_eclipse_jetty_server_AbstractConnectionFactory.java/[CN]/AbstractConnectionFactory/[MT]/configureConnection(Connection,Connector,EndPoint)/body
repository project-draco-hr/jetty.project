{
  if (connection instanceof AbstractConnection)   ((AbstractConnection)connection).setInputBufferSize(getInputBufferSize());
  if (connector instanceof AggregateLifeCycle) {
    AggregateLifeCycle aggregate=(AggregateLifeCycle)connector;
    for (    Connection.Listener listener : aggregate.getBeans(Connection.Listener.class))     connection.addListener(listener);
  }
}
