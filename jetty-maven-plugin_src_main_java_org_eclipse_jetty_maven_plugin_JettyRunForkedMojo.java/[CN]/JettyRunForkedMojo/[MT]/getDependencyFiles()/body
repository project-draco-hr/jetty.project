{
  List<File> dependencyFiles=new ArrayList<File>();
  for (Iterator<Artifact> iter=project.getArtifacts().iterator(); iter.hasNext(); ) {
    Artifact artifact=(Artifact)iter.next();
    if (((!Artifact.SCOPE_PROVIDED.equals(artifact.getScope())) && (!Artifact.SCOPE_TEST.equals(artifact.getScope()))) || (useTestScope && Artifact.SCOPE_TEST.equals(artifact.getScope()))) {
      dependencyFiles.add(artifact.getFile());
      getLog().debug("Adding artifact " + artifact.getFile().getName() + " for WEB-INF/lib ");
    }
  }
  return dependencyFiles;
}
