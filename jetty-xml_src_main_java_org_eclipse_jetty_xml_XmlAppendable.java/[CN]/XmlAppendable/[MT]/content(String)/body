{
  if (s != null) {
    for (int i=0; i < s.length(); i++) {
      char c=s.charAt(i);
switch (c) {
case '<':
        _out.append("&lt;");
      break;
case '>':
    _out.append("&gt;");
  break;
case '&':
_out.append("&amp;");
break;
case '\'':
_out.append("&apos;");
break;
case '"':
_out.append("&quot;");
break;
default :
_out.append(c);
}
}
}
return this;
}
