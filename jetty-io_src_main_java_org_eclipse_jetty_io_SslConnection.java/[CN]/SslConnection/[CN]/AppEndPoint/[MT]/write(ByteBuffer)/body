{
  _lock.lock();
  try {
    if (!_appWriteFuture.isDone())     throw new IllegalStateException("previous write not complete");
    for (    ByteBuffer b : buffers) {
      process(b);
      if (b.hasRemaining()) {
        _writeBuffers=buffers;
        _appWriteFuture=new DispatchingIOFuture(_lock);
        return _appWriteFuture;
      }
    }
    return DoneIOFuture.COMPLETE;
  }
 catch (  IOException e) {
    return new DoneIOFuture(e);
  }
 finally {
    _lock.unlock();
  }
}
