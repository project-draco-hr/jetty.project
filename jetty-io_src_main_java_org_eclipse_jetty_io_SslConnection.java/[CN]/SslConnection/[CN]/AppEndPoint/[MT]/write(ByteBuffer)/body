{
  _lock.lock();
  try {
    if (!_appWriteFuture.isComplete())     throw new IllegalStateException("previous write not complete");
    for (    ByteBuffer b : buffers) {
      process(b);
      if (b.hasRemaining()) {
        _writeBuffers=buffers;
        _appWriteFuture=new RunnableIOFuture(_lock);
        return _appWriteFuture;
      }
    }
    return COMPLETE;
  }
 catch (  IOException e) {
    return new CompletedIOFuture(e);
  }
 finally {
    _lock.unlock();
    _appReadFuture.run();
    _appWriteFuture.run();
  }
}
