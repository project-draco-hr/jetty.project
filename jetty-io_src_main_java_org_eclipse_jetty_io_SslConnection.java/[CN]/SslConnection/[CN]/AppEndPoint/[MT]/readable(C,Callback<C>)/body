{
  _lock.lock();
  try {
    if (_readCallback != null)     throw new IllegalStateException("previous read not complete");
    if (BufferUtil.hasContent(_inApp)) {
      callback.completed(context);
      return;
    }
    _readContext=context;
    _readCallback=callback;
    scheduleOnReadable();
  }
  finally {
    _lock.unlock();
  }
}
