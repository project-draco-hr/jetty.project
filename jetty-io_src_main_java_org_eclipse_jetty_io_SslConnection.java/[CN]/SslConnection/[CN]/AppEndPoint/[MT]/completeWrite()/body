{
  _lock.lock();
  try {
    for (    ByteBuffer b : _writeBuffers) {
      process(b);
      if (b.hasRemaining())       return;
    }
    _appWriteFuture.ready();
  }
 catch (  IOException e) {
    _appWriteFuture.fail(e);
  }
 finally {
    _lock.unlock();
    if (_appWriteFuture.isDispatched())     _appWriteFuture.run();
  }
}
