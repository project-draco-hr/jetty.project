{
  _lock.lock();
  try {
    if (--_allocations == 0) {
      if (_buffers != null && _inNet.remaining() == 0 && _outNet.remaining() == 0 && _inApp.remaining() == 0) {
        _inNet=null;
        _outNet=null;
        _inApp=null;
        _buffers._inNet.clear().limit(0);
        _buffers._outNet.clear().limit(0);
        _buffers._inApp.clear().limit(0);
        __buffers.set(_buffers);
        _buffers=null;
      }
    }
  }
  finally {
    _lock.unlock();
  }
}
