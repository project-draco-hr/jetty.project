{
synchronized (this) {
    if (_allocations++ == 0) {
      if (_inbound == null) {
        _inbound=__inBuffer.get();
        if (_inbound == null)         _inbound=new IndirectNIOBuffer(_session.getPacketBufferSize() * 2);
      }
      if (_outbound == null) {
        _outbound=__outBuffer.get();
        if (_outbound == null)         _outbound=new IndirectNIOBuffer(_session.getPacketBufferSize() * 2);
      }
    }
  }
}
