{
synchronized (this) {
    if (_allocations++ == 0) {
      if (_buffers == null) {
        _buffers=__buffers.get();
        if (_buffers == null)         _buffers=new SslBuffers(_session.getPacketBufferSize() * 2,_session.getApplicationBufferSize() * 2);
        _inbound=_buffers._in;
        _outbound=_buffers._out;
        _unwrapBuf=_buffers._unwrap;
        __buffers.set(null);
      }
    }
  }
}
