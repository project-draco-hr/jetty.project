{
  QNode event=this;
  while (true) {
    QNode prev=event._prev;
    if (prev == null)     return event.scanForPrevOf(this);
    QNode prev_next=prev._next.get();
    if (prev_next == this)     return prev;
    if (prev_next == null || prev_next.isDelayed()) {
      QNode p=prev.scanForPrevOf(this);
      if (p != null)       return p;
    }
    event=prev;
  }
}
