{
  StringBuilder body;
  if ("HTTP/1.1".equals(httpVersion))   assertThat("if no content-length or transfer-encoding header is set, " + "connection: close header must be set",headers.get("connection"),is("close"));
  body=new StringBuilder();
  while (true) {
    int read=reader.read();
    if (read == -1)     break;
    char c=(char)read;
    body.append(c);
  }
  return body;
}
