{
synchronized (this) {
    long now=_selectSet.getNow();
    long end=now + timeoutMs;
    try {
      _readBlocked=true;
      while (isOpen() && _readBlocked) {
        try {
          updateKey();
          this.wait(end - now);
        }
 catch (        InterruptedException e) {
          Log.warn(e);
        }
 finally {
          now=_selectSet.getNow();
        }
        if (_readBlocked && now >= end)         return false;
      }
    }
  finally {
      _readBlocked=false;
    }
  }
  return true;
}
