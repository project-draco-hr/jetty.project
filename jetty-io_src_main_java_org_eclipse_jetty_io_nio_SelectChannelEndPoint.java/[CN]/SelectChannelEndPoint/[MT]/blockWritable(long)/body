{
synchronized (this) {
    long start=_selectSet.getNow();
    try {
      _writeBlocked=true;
      while (isOpen() && _writeBlocked) {
        try {
          updateKey();
          this.wait(timeoutMs);
        }
 catch (        InterruptedException e) {
          Log.warn(e);
        }
        timeoutMs-=_selectSet.getNow() - start;
        if (_writeBlocked && timeoutMs <= 0)         return false;
      }
    }
  finally {
      _writeBlocked=false;
      if (_idleTimestamp != -1)       scheduleIdle();
    }
  }
  return true;
}
