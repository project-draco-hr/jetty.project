{
  setName("Shutdown");
  Log.info("Shutdown hook executing");
  Iterator it=servers.iterator();
  while (it.hasNext()) {
    Server svr=(Server)it.next();
    if (svr == null || !svr.getStopAtShutdown())     continue;
    try {
      svr.stop();
    }
 catch (    Exception e) {
      Log.warn(e);
    }
    Log.info("Shutdown hook complete");
    try {
      Thread.sleep(1000);
    }
 catch (    Exception e) {
      Log.warn(e);
    }
  }
}
