{
  setName("Shutdown");
  Log.info("Shutdown hook executing");
  for (  Server svr : _servers) {
    if (svr == null || !svr.getStopAtShutdown() || !svr.isRunning())     continue;
    try {
      svr.stop();
    }
 catch (    Exception e) {
      Log.warn(e);
    }
    Log.info("Shutdown hook complete");
    try {
      Thread.sleep(1000);
    }
 catch (    Exception e) {
      Log.warn(e);
    }
  }
}
