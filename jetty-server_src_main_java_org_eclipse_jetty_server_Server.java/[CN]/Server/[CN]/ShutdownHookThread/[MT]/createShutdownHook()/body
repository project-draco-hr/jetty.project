{
  if (!_hooked) {
    try {
      Method shutdownHook=java.lang.Runtime.class.getMethod("addShutdownHook",Thread.class);
      shutdownHook.invoke(Runtime.getRuntime(),this);
      _hooked=true;
    }
 catch (    Exception e) {
      if (Log.isDebugEnabled())       Log.debug("No shutdown hook in JVM ",e);
    }
  }
}
