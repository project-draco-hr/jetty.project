{
  final String target=connection.getRequest().getPathInfo();
  final Request request=connection.getRequest();
  final Response response=connection.getResponse();
  if (LOG.isDebugEnabled())   LOG.debug(request.getDispatcherType() + " " + target+ " on "+ connection);
  if ("*".equals(target)) {
    handleOptions(request,response);
    if (!request.isHandled())     handle(target,request,request,response);
  }
 else   handle(target,request,request,response);
  if (LOG.isDebugEnabled())   LOG.debug("RESPONSE " + target + "  "+ connection.getResponse().getStatus()+ " handled="+ request.isHandled());
}
