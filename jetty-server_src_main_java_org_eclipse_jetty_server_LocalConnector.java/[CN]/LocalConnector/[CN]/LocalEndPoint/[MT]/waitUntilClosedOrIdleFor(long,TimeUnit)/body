{
  Thread.yield();
  int size=getOutput().remaining();
  while (isOpen()) {
    try {
      if (!_closed.await(idleFor,units)) {
        if (size == getOutput().remaining())         return;
        size=getOutput().remaining();
      }
    }
 catch (    Exception e) {
      logger.warn(e);
    }
  }
}
