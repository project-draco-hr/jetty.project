{
  HttpConnection connection=null;
  while (true) {
synchronized (this) {
      if (connection != null) {
        _connections.remove(connection);
        connection.getEndPoint().close();
        connection=null;
      }
      if (_idle.size() > 0)       connection=_idle.remove(_idle.size() - 1);
    }
    if (connection == null)     return null;
    if (connection.cancelIdleTimeout())     return connection;
  }
}
