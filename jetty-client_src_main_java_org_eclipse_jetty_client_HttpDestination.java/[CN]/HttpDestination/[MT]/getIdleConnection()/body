{
  AbstractHttpConnection connection=null;
  while (true) {
synchronized (this) {
      if (connection != null) {
        _connections.remove(connection);
        connection.close();
        connection=null;
      }
      if (_idleConnections.size() > 0)       connection=_idleConnections.remove(_idleConnections.size() - 1);
    }
    if (connection == null) {
      return null;
    }
    if (connection.cancelIdleTimeout()) {
      return connection;
    }
  }
}
