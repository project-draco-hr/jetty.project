{
  Throwable connect_failure=null;
  boolean startConnection=false;
synchronized (this) {
    _pendingConnections--;
    if (_newConnection > 0) {
      connect_failure=throwable;
      _newConnection--;
    }
 else     if (_queue.size() > 0) {
      HttpExchange ex=_queue.remove(0);
      if (ex.setStatus(HttpExchange.STATUS_EXCEPTED))       ex.getEventListener().onConnectionFailed(throwable);
      if (!_queue.isEmpty() && _client.isStarted())       startConnection=true;
    }
  }
  if (startConnection)   startNewConnection();
  if (connect_failure != null) {
    try {
      _newQueue.put(connect_failure);
    }
 catch (    InterruptedException e) {
      LOG.ignore(e);
    }
  }
}
