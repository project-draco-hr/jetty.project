{
  if (_cookies != null) {
    StringBuilder buf=null;
    for (    HttpCookie cookie : _cookies) {
      if (buf == null)       buf=new StringBuilder();
 else       buf.append("; ");
      buf.append(cookie.getName());
      buf.append("=");
      buf.append(cookie.getValue());
    }
    if (buf != null)     ex.addRequestHeader(HttpHeaders.COOKIE,buf.toString());
  }
  if (_authorizations != null) {
    Authorization auth=(Authorization)_authorizations.match(ex.getURI());
    if (auth != null)     (auth).setCredentials(ex);
  }
  HttpConnection connection=getIdleConnection();
  if (connection != null) {
    boolean sent=connection.send(ex);
    if (!sent)     connection=null;
  }
  if (connection == null) {
synchronized (this) {
      _queue.add(ex);
      if (_connections.size() + _pendingConnections < _maxConnections) {
        startNewConnection();
      }
    }
  }
}
