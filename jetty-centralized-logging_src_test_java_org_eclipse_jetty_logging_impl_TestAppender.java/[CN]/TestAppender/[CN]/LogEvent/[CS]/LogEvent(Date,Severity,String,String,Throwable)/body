{
  super();
  this.date=date;
  this.severity=severity;
  this.name=name;
  this.message=message;
  this.t=t;
  this.mdc="";
  Map<String,String> mdcMap=MDC.getCopyOfContextMap();
  if (mdcMap != null) {
    Set<String> keys=new TreeSet<String>();
    keys.addAll(mdcMap.keySet());
    boolean delim=false;
    for (    String key : keys) {
      if (delim) {
        mdc+=", ";
      }
      mdc+=key + "=" + mdcMap.get(key);
      delim=true;
    }
  }
}
