{
  String hostPort="localhost:" + serverConnector.getLocalPort();
  String request="" + "CONNECT " + hostPort + " HTTP/1.1\r\n"+ "Host: "+ hostPort+ "\r\n"+ "\r\n";
  Socket socket=newSocket();
  socket.setSoTimeout(3600000);
  try {
    OutputStream output=socket.getOutputStream();
    BufferedReader input=new BufferedReader(new InputStreamReader(socket.getInputStream()));
    output.write(request.getBytes("UTF-8"));
    output.flush();
    Response response=readResponse(input);
    System.err.println(response);
    assertEquals("200",response.getCode());
    assertFalse(input.ready());
    SSLSocket sslSocket=wrapSocket(socket);
    try {
      output=sslSocket.getOutputStream();
      input=new BufferedReader(new InputStreamReader(sslSocket.getInputStream()));
      request="GET /echo HTTP/1.1\r\n" + "Host: " + hostPort + "\r\n"+ "\r\n";
      output.write(request.getBytes("UTF-8"));
      output.flush();
      response=readResponse(input);
      assertEquals("200",response.getCode());
      assertEquals("GET /echo",response.getBody());
    }
  finally {
      sslSocket.close();
    }
  }
  finally {
    socket.close();
  }
}
