{
  for (int i=0; i < indent; i++)   b.append("| ");
  if (handler == null)   b.append("NULL");
 else {
    b.append(handler.toString());
    b.append(handler.isStarted() ? " started" : " STOPPED");
    b.append('\n');
    indent++;
    if (handler instanceof HandlerContainer)     for (    Handler h : ((HandlerContainer)handler).getHandlers())     dump(b,h,indent);
  }
}
