{
  StringBuffer buf=new StringBuffer();
  buf.append(severity.name()).append("|");
  buf.append(name).append("|");
  buf.append(message);
  if (t != null) {
    buf.append("|").append(t.getClass().getName());
    buf.append("(\"").append(t.getMessage()).append("\")");
  }
  return buf.toString();
}
